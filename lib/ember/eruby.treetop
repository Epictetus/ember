grammar ERuby

  include ERubyDirective

  rule eruby
    eruby_directive_at_start_of_input?
    ( eruby_content? eruby_directive_after_start_of_input )*
    eruby_content?

    <ERubyDocument>
  end

  rule eruby_content
    ( !eruby_directive_after_start_of_input . )+

    <ERubyContent>
  end

end
